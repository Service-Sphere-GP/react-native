{
  "expo": {
    "name": "ServiceSphere",
    "slug": "ServiceSphere",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#147e93"
    },
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#147e93"
      },
      "package": "com.servicesphere.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "cover",
          "backgroundColor": "#147e93"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Roboto-Regular.ttf",
            "./assets/fonts/Roboto-Bold.ttf",
            "./assets/fonts/Roboto-Medium.ttf",
            "./assets/fonts/Roboto-Light.ttf",
            "./assets/fonts/Roboto-Thin.ttf",
            "./assets/fonts/Roboto-Semibold.ttf", // Corrected filename
            "./assets/fonts/Roboto-ExtraBold.ttf",
            "./assets/fonts/Roboto-ExtraLight.ttf",
            "./assets/fonts/Pacifico-Regular.ttf",
            "./assets/fonts/Montserrat-Arabic Black 900.otf",
            "./assets/fonts/Montserrat-Arabic Bold 700.otf",
            "./assets/fonts/Montserrat-Arabic ExtraBold 800.otf",
            "./assets/fonts/Montserrat-Arabic ExtraLight 275.otf",
            "./assets/fonts/Montserrat-Arabic Light 300.otf",
            "./assets/fonts/Montserrat-Arabic Medium 500.otf",
            "./assets/fonts/Montserrat-Arabic SemiBold 600.otf",
            "./assets/fonts/Montserrat-Arabic Thin 250.otf",
            "./assets/fonts/Montserrat-Arabic.otf",
            "./assets/fonts/Montserrat-Regular.otf",
            "./assets/fonts/SpaceMono-Regular.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "065fb423-92aa-49d4-a85a-5d1e87d1bf43"
      }
    }
  }
}
